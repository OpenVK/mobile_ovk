{extends "../@layout.xml"}
{block title}{_select_language}{/block}

{block header}
    {_select_language}
{/block}

{block body}
    <style>
        .navigation-lang {
            display: grid;
            grid-gap: 10px;
            grid-template-columns: repeat(5, 1fr);
        }

        .navigation-lang .link_new {
            display: inline-block;
            padding: 25px 25px 20px 25px;
            text-decoration: none;
            border-top: 1px solid #fff;
            color: #000;
            border-bottom: 0;
            border-left: 0;
            border-right: 0;
            text-align: center;
            font-size: 11px;
            cursor: pointer;
            background: none;
            margin-bottom: 1px;
        }

        .navigation-lang .link_new:hover {
            background-color: #E4E4E4;
            border-top: 1px solid #CCCCCC;
        }
    </style>
    <div class="contentWraplegend" onclick="hidePanel(this);">
        <span>{_select_language}</span> 
    </div>
    <div class="lang_content">
     {foreach $languages as $language}
            {var $result = preg_match("/(.+)\((.+)\)/", $language['native_name'], $name)}
            <ul class="menu">
    
                    <li class="element prmenu">
                   
                        <a href="language?lg={$language['code']}&hash={urlencode($csrfToken)}">
                        {if $result == 1}
                    {$name[1]}
                    <br>
                    <small>{$name[2]}</small>
                {else}
                    {$language['native_name']}
                {/if}
                        </a>
                        </li>
                        
                        </ul>
                        
                        {/foreach}
   </div>
{/block}
